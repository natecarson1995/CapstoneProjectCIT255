@model CapstoneProject.ViewModels.PostDetailResult

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(post => post.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(post => post.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(post => post.AdditionalText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(post => post.AdditionalText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(post => post.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(post => post.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(post => post.ModelData)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.EmbedCode)
        </dd>
        <dt class="col-sm-2">
            Embed Code
        </dt>
        <dd class="col-sm-10">
            <code>
                @Model.EmbedCode
            </code>
        </dd>
    </dl>
</div>
<div class="link-collection">
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>
