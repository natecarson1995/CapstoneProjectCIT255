@model CapstoneProject.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ModelID" />
            <div class="form-group">
                <label asp-for="Model.Description" class="control-label"></label>
                <input asp-for="Model.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AdditionalText" class="control-label"></label>
                <input asp-for="AdditionalText" class="form-control" />
                <span asp-validation-for="AdditionalText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.ModelData" class="control-label"></label>
                <textarea cols=80 rows=20 asp-for="Model.ModelData"></textarea>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPrivatePost"/> @Html.DisplayNameFor(model => model.IsPrivatePost)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="link-collection">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
